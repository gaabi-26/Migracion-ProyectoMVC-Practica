@model dominio.Disco

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div class="row">
    <h4>Disco</h4>
    <hr />
    <div class="col-8">
        <div class="row">
            <dl class="row">
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.FechaLanzamiento)
                </dt>
                <dd class = "col-sm-8">
                    @Model.FechaLanzamiento.ToString("dd/MM/yyyy")
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.CantidadCanciones)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.CantidadCanciones)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Estilo)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Estilo.Descripcion)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.TipoEdicion)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.TipoEdicion.Descripcion)
                </dd>
            </dl>
        </div>
    </div>
    <div class="col-4">
        <div class="row">
            <img src="@Html.DisplayFor(model => model.UrlTapa)" class="img-fluid" />
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="model.Id" class="btn btn-secondary btn-sm">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
