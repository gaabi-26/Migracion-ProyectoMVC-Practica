@model dominio.Disco

@{
    ViewData["Title"] = "Crear Disco";
}

<h1>Crear Disco</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaLanzamiento" class="control-label"></label>
                <input asp-for="FechaLanzamiento" type="date" class="form-control" />
                <span asp-validation-for="FechaLanzamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadCanciones" class="control-label"></label>
                <input asp-for="CantidadCanciones" class="form-control" />
                <span asp-validation-for="CantidadCanciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlTapa" class="control-label"></label>
                <input asp-for="UrlTapa" class="form-control" autocomplete="off"/>
                <span asp-validation-for="UrlTapa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estilo" class="control-label"></label>
                <select asp-for="Estilo.Id" class="form-control" asp-items="ViewBag.Estilos"></select>
                <span asp-validation-for="Estilo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoEdicion" class="control-label"></label>
                <select asp-for="TipoEdicion.Id" class="form-control" asp-items="ViewBag.TiposEdicion"></select>
                <span asp-validation-for="TipoEdicion" class="text-danger"></span>
            </div>

            <br>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
